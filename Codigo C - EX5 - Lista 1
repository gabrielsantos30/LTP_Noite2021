Codigo C - PESO IDEAL 

#include <stdio.h>
#include <stdlib.h>
int main(void) {

  float 
  altura, ideal_m, ideal_f, sex;

printf("Seu genero: \n");
  scanf("%f", &sex);

  printf("Sua Altura[m]: \n");
  scanf("%f", &altura);

  if (sex == 0){
    ideal_f= 62.1*altura - 44.7;
    printf("Peso ideal Feminino : %.2f", ideal_f);
  }

  if (sex == 1){
ideal_m= 72.7*altura - 58;
printf("Peso Ideal Masculino: %.2f", ideal_m);
  }

  
  return 0;
}
